<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - </title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link href="~/Content/app.css" rel="stylesheet" />
</head>
<body data-spy="scroll" data-target=".navbar-collapse" data-offset="50">

   
    <section class="navbar navbar-inverse navbar-fixed-top" role="navigation">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Decent Restaurant", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="collapse navbar-collapse">
                <ul class="nav navbar-nav navbar-right">
                    <li>@Html.ActionLink("Home", "Index", "Home", null, new {@class="smoothScroll"})</li>
                    <li>@Html.ActionLink("Menu", "Index", "Foods", null, new {@class="smoothScroll"})</li>
                    <li>@Html.ActionLink("About", "About", "Home", null, new {@class="smoothScroll"})</li>
                    <li>@Html.ActionLink("Contact", "Contact", "Home", null, new {@class="smoothScroll"})</li>
                </ul>
            </div>
        </div>
    </section>

        @RenderBody()
        <hr />
        <section class="navbar-fixed-bottom">
            <div class="nav nav-justified" style="background-color: #000000">
                <div class="navbar-text pull-left">
                    <p style="color: #ffffff">Copyright by Mayank Raval © 2016</p>
                </div>

                <div class="navbar-text pull-right">
                    <a href="https://github.com/mayankraval" target="_blank"><i class="fa fa-github-square fa-2x"></i></a>
                    <a href="https://in.linkedin.com/in/mayankraval" target="_blank"><i class="fa fa-linkedin-square fa-2x"></i></a>
                    <a href="https://instagram.com/mayank.raval/" target="_blank"><i class="fa fa-instagram fa-2x"></i></a>
                    <a href="https://twitter.com/Mayank_Raval" target="_blank"><i class="fa fa-twitter-square fa-2x"></i></a>
                    <a href="https://www.facebook.com/mayank.raval" target="_blank"><i class="fa fa-facebook-square fa-2x"></i></a>
                </div>
            </div>
        </section>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
